<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaomi.infrastructure.persistent.dao.ProductDao">

    <resultMap id="BaseResultMap" type="com.xiaomi.infrastructure.persistent.po.Product">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="stock" property="stock" jdbcType="INTEGER"/>
    </resultMap>

    <insert id="insert" parameterType="com.xiaomi.infrastructure.persistent.po.Product">
        INSERT INTO product (name, stock)
        VALUES (#{name}, #{stock})
    </insert>

    <update id="update" parameterType="com.xiaomi.infrastructure.persistent.po.Product">
        UPDATE product
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="stock != null">stock = #{stock},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM product WHERE id = #{id}
    </delete>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT id, name, stock
        FROM product
        WHERE id = #{id}
    </select>
    <update id="decreaseStock" parameterType="map">
        UPDATE product
        SET stock = stock - #{param2}
        WHERE id = #{param1} AND stock >= #{param2}
    </update>

</mapper>
